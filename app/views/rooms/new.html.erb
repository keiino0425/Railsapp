<div class="container-fiuld room-new">
    <div class="row">
        <div class="col-lg-2 room-nav room-nav-pc d-lg-block d-none">
            <ul>
                <li class="active">
                    <%= link_to "基本情報", "/rooms/new" %>
                </li>
            </ul>
        </div>
        <div class="col-lg-2 room-nav room-nav-mobile d-lg-none">
            <ul>
                <li class="active">
                    <%= link_to "基本情報", "/rooms/new" %>
                </li>
            </ul>
        </div>
        <div class="col-lg-10 room-view">
            <div class="room-view-box">
                <%= form_with model:@room do |f| %>
                    <div class="update-content">
                        <div class="row">
                            <h5>ルーム情報登録</h5>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <label class="col-md-3 required-a" for="name">ルーム名</label>
                            <%= f.text_field :roomname, placeholder: "ルーム名を入力", class: "form-control mb-4 col-md-9" %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <label class="col-md-3 required-a" for="content">ルーム紹介</label>
                            <%= f.text_area :roominfo, placeholder: "ルーム説明を入力", class: "form-control mb-4 col-md-9" %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <label class="col-md-3 required-a" for="price">料金</label>
                            <%= f.number_field :price, placeholder: "一日あたりの料金を入力", class: "form-control mb-4 col-md-9" %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <label class="col-md-3 required-a" for="address">住所</label>
                            <%= f.text_field :address, placeholder: "住所を入力", class: "form-control mb-4 col-md-9" %>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <label class="col-md-3 required-a" for="image">ルーム画像</label>
                            <%= f.file_field :roomimage, accept: 'image/jpeg,image/gif,image/png', placeholder: "ルーム画像をアップロード", class: "mb-4 col-md-9" %>
                        </div>
                    </div>

                    <%= f.hidden_field :user_id, value: current_user.id %>
                    
                    <div class="update-content">
                        <div class="row">
                            <%= f.submit "登録", class: "col-md-2 btn btn-primary mx-3" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>