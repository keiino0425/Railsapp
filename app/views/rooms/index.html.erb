<div class="top">
    <div class="top-main">
        <div class="container">
            <div class="row col-lg-6">
                <div class="form-fream">
                    <div class="form-area">
                        <p class="form-area-title mb-4">Potepan Shareでまだ体験したことのない旅をしよう</p>
                        <%= search_form_for @search, url: search_rooms_path do |f| %>
                            <label for="__">エリア</label>
                                <%= f.text_field :address_cont, placeholder: "東京", class: "form-control mb-4" %>
                                <%= f.submit "探す", class: "form-control btn-primary mb-4" %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="panel-area m-5">
            <h1 class="section-title">おすすめのエリア</h1>
            <div class="row">
                <div class="panel-item col-lg-3 col-6">
                    <span>東京</span>
                    <%= link_to search_rooms_path(q: { address_cont: "東京"}) do %>
                    <%= image_tag "tokyo.jpeg", class: "panel-image" %>
                    <div class="shadow"></div>
                    <% end %>
                </div>
                <div class="panel-item col-lg-3 col-6">
                    <span>大阪</span>
                    <%= link_to search_rooms_path(q: { address_cont: "大阪"}) do %>
                    <%= image_tag "osaka.jpeg", class: "panel-image" %>
                    <div class="shadow"></div>
                    <% end %>
                </div>
                <div class="panel-item col-lg-3 col-6">
                    <span>京都</span>
                    <%= link_to search_rooms_path(q: { address_cont: "京都"}) do %>
                    <%= image_tag "kyoto.jpeg", class: "panel-image" %>
                    <div class="shadow"></div>
                    <% end %>
                </div>
                <div class="panel-item col-lg-3 col-6">
                    <span>札幌</span>
                    <%= link_to search_rooms_path(q: { address_cont: "札幌"}) do %>
                    <%= image_tag "sapporo.jpeg", class: "panel-image" %>
                    <div class="shadow"></div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>