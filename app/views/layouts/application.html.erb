<!DOCTYPE html>
<html>
  <head>
    <title>RailsTest</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header-inner">
        <div class="header-left-nav">
          <%= link_to "/rooms" do %>
            <img alt="サイトのロゴ画像" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/logo.png">
          <% end %>
          <%= search_form_for @search, url: search_rooms_path do |f| %>
            <div class="header-sharch d-lg-inline-block d-none">
              <%= f.text_field :address_cont, placeholder: "エリア", class: "form-control" %>
              <i class="fas fa-map-marker-alt"></i>
            </div>
            <div class="header-sharch d-lg-inline-block d-none">
              <%= f.text_field :roominfo_cont, placeholder: "キーワード", class: "form-control" %>
              <i class="fas fa-search"></i>
            </div>
            <div class="d-none">
            <%= f.submit %>
            </div>
          <% end %>
        </div>
        <div class="header-right-nav">
          <% if user_signed_in? %>
            <div class="nav-item">
              <div class="nav-item d-sm-inline-block d-none">
                <%= current_user.username %>
              </div>
              <div class="nav-item">
                <% if current_user.userimage? %>
                  <%= image_tag "#{current_user.userimage}", alt: 'メニュー', class: "mx-3 p-1 host-icon nav-trigger" %>
                <% else %>
                  <%= image_tag "default.jpeg", alt: 'メニュー', class: "mx-3 p-1 host-icon nav-trigger" %>
                <% end %>
                <ul class="header-nav-menu">
                  <li>
                    <%= link_to "ルーム登録", "/rooms/new" %>
                  </li>
                  <li>
                    <%= link_to "予約済みルーム一覧", "/reservations" %>
                  </li>
                  <li>
                    <%= link_to "登録済みルーム一覧", "/rooms/posts" %>
                  </li>
                  <li>
                    <%= link_to "設定", "/users/account", data: {"turbolinks" => false} %>
                  </li>
                  <li>
                    <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
                  </li>
                </ul>
              </div>
            </div>
          <% else %>
            <div class="nav-item">
              <%= link_to "ログイン", new_user_session_path, class: "btn btn-primary my-2 my-3" %>
              <%= link_to "登録する", new_user_registration_path, class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </header>
    <div class="clearflex">
    </div>
    <script>
      $(function() {
        $('.nav-trigger').click(function() {
          $('.header-nav-menu').toggle(10);
        })
      });
    </script>
    <div class="notifications">
      <div class="notice">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>
    </div>
    <%= yield %>
    <footer class="footer">
      <p>© 2020 POTEPAN.INC.</p>
    </footer>
  </body>
</html>
