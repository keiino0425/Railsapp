<div class="container-fiuld reservations">
    <h4 class="pb-4">予約済みルーム一覧</h4>
    <table>
        <thead>
            <tr align="center">
                <th>ルーム画像</th>
                <th>ルーム名</th>
                <th>ルーム紹介</th>
                <th>合計料金</th>
                <th>開始日</th>
                <th>終了日</th>
                <th>予約確定日時</th>
            </tr>
        </thead>
        <tbody>
            <% @reservations.each do |reservation| %>
                <tr>
                    <td>
                        <%= link_to (image_tag "#{reservation.room.roomimage}", class: "reservations-image"), "/reservations/new/#{reservation.room_id}"%>
                    </td>
                    <td class="posts-name">
                        <%= link_to reservation.room.roomname, "/reservations/new/#{reservation.room_id}" %>
                    </td>
                    <td class="posts-content">
                        <%= reservation.room.roominfo %>    
                    </td>
                    <td class="price-icon">
                        <%= reservation.total_amount %>
                    </td>
                    <td>
                        <%= l reservation.startdate %>
                    </td>
                    <td>
                        <%= l reservation.enddate %>
                    </td>
                    <td>
                        <%= l reservation.created_at %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>