.room-new {
    width: 100%;
}

.room-new .room-nav-pc {
    height: 100vh;
}

.room-new .room-nav {
    width: 100%;
    box-sizing: border-box;
    padding: 30px 15px;
}

.room-new .room-nav-pc .active {
    border-right: 3px solid #4a90e2;
}

.room-new .room-nav-pc .active a {
    color: #4a90e2;
}

.room-new .room-nav li {
    font-size: 18px;
    padding: 10px;
}

.room-new .room-nav-mobile {
    height: auto;
}

.room-new .room-nav-mobile .active {
    border-bottom: 3px solid #4a90e2;
}

.room-new .room-nav-mobile .active a {
    color: #4a90e2;
}

.room-new .room-nav-mobile li {
    float: left;
}

.room-new .room-view {
    background-color: #F6F8F9;
    border-left: 2px solid #e2e2e2;
}

.room-new .room-view-box {
    max-width: 880px;
    background-color: #fff;
    border: 1px solid #eaedef;
    margin: 50px auto;
}

.room-new .update-content {
    border-bottom: 1px solid #eaedef;
    padding: 20px;
    margin: 0 15px;
    font-size: 16px;
}

.room-new .update-content label {
    font-weight: bold;
}

.room {
    width: 100%;
    padding: 30px 60px;
}

.room-frame-inner {
    border: 1px solid #e2e2e2;
    margin-bottom: 10px;
}

.room-image-out {
    position: relative;
    width: 100%;
    background: #F6F8F9;
    height: 200px;
}

.room-image {
    width: 100%;
    height: 180px;
    position: absolute;
    top: 20px;
    object-fit: cover;
}

.room-profile {
    width: 100%;
    padding: 15px;
}

.room-profile p {
    word-break: break-all;
}

.room-profile-name {
    font-size: 18px;
    font-weight: bold;
    color: #909090;
}

.room-profile-city {
    font-size: 16px;
    font-weight: bold;
}

.room-profile-price {
    text-align: right;
    font-size: 16px;
    letter-spacing: 1px;
}

.top .top-main {
    background-image: url("<%= asset_path ('top.jpeg')%>");
    background-size: cover;
    width: 100%;
    height: 650px;
}

.top .form-fream {
    height: 650px;
    display: flex;
    align-items: center;
}

.top .form-area {
    background: #fff;
    padding: 24px;
    border-radius: 5px;
}

.top .form-area-title {
    font-size: 28px;
    line-height: 33px;
    letter-spacing: 1px;
}

.top .section-title {
    font-size: 24px;
    margin: 35px 0;
    font-weight: bold;
}

.top span {
    position: absolute;
    bottom: 50px;
    left: 0;
    right: 0;
    color: #fff;
    font-weight: bold;
    z-index: 1;
    margin: auto;
    text-align: center;
    font-size: 24px;
}

.shadow {
    box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
}